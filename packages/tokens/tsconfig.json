{
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "target": "es6",
    "lib": ["dom", "ES2017"],
    "jsx": "react-jsx",
    "module": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}